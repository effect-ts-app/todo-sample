{
  "openapi": "3.0.0",
  "info": {
    "title": "@effect-ts-demo/todo-api",
    "version": "0.0.1"
  },
  "paths": {
    "/me": {
      "get": {
        "parameters": [
          {
            "name": "x-user-id",
            "in": "header",
            "required": true,
            "schema": {
              "minLength": 1,
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "name": {
                      "minLength": 1,
                      "type": "string"
                    },
                    "inboxOrder": {
                      "items": {
                        "format": "uuid",
                        "type": "string"
                      },
                      "type": "array"
                    },
                    "lists": {
                      "items": {
                        "title": "TaskListEntryOrGroup",
                        "oneOf": [
                          {
                            "$ref": "#/components/schemas/TaskListEntry"
                          },
                          {
                            "$ref": "#/components/schemas/TaskListEntryGroup"
                          }
                        ],
                        "discriminator": {
                          "propertyName": "_tag"
                        }
                      },
                      "type": "array"
                    }
                  },
                  "required": [
                    "name",
                    "inboxOrder",
                    "lists"
                  ],
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "ValidationError"
          }
        }
      }
    },
    "/tasks": {
      "get": {
        "parameters": [
          {
            "name": "x-user-id",
            "in": "header",
            "required": true,
            "schema": {
              "minLength": 1,
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "items": {
                      "items": {
                        "allOf": [
                          {
                            "$ref": "#/components/schemas/Task"
                          },
                          {
                            "properties": {
                              "myDay": {
                                "format": "date-time",
                                "type": "string",
                                "nullable": true
                              }
                            },
                            "required": [
                              "myDay"
                            ],
                            "type": "object"
                          }
                        ]
                      },
                      "type": "array"
                    }
                  },
                  "required": [
                    "items"
                  ],
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "ValidationError"
          }
        }
      },
      "post": {
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "listId": {
                    "minLength": 1,
                    "type": "string"
                  },
                  "title": {
                    "minLength": 1,
                    "type": "string"
                  },
                  "isFavorite": {
                    "type": "boolean"
                  },
                  "myDay": {
                    "format": "date-time",
                    "type": "string",
                    "nullable": true
                  }
                },
                "required": [
                  "listId",
                  "title",
                  "isFavorite",
                  "myDay"
                ],
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "id": {
                      "format": "uuid",
                      "type": "string"
                    }
                  },
                  "required": [
                    "id"
                  ],
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "ValidationError"
          }
        }
      }
    },
    "/tasks/:id": {
      "get": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "format": "uuid",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Task"
                    },
                    {
                      "properties": {
                        "myDay": {
                          "format": "date-time",
                          "type": "string",
                          "nullable": true
                        }
                      },
                      "required": [
                        "myDay"
                      ],
                      "type": "object"
                    }
                  ],
                  "nullable": true
                }
              }
            }
          },
          "400": {
            "description": "ValidationError"
          }
        }
      },
      "patch": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "format": "uuid",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "title": {
                    "minLength": 1,
                    "type": "string"
                  },
                  "completed": {
                    "format": "date-time",
                    "type": "string",
                    "nullable": true
                  },
                  "isFavorite": {
                    "type": "boolean"
                  },
                  "due": {
                    "format": "date-time",
                    "type": "string",
                    "nullable": true
                  },
                  "reminder": {
                    "format": "date-time",
                    "type": "string",
                    "nullable": true
                  },
                  "note": {
                    "minLength": 1,
                    "type": "string",
                    "nullable": true
                  },
                  "steps": {
                    "items": {
                      "$ref": "#/components/schemas/Step"
                    },
                    "type": "array"
                  },
                  "assignedTo": {
                    "minimum": 0,
                    "type": "number",
                    "nullable": true
                  },
                  "myDay": {
                    "format": "date-time",
                    "type": "string",
                    "nullable": true
                  }
                },
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Empty"
          },
          "400": {
            "description": "ValidationError"
          },
          "404": {
            "description": "NotFoundError"
          }
        }
      },
      "delete": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "format": "uuid",
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Empty"
          },
          "400": {
            "description": "ValidationError"
          },
          "404": {
            "description": "NotFoundError"
          }
        }
      }
    },
    "/tasks-order": {
      "post": {
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "order": {
                    "items": {
                      "format": "uuid",
                      "type": "string"
                    },
                    "type": "array"
                  },
                  "listId": {
                    "minLength": 1,
                    "type": "string"
                  }
                },
                "required": [
                  "order",
                  "listId"
                ],
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Empty"
          },
          "400": {
            "description": "ValidationError"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {},
    "schemas": {
      "TaskListEntry": {
        "title": "TaskListEntry",
        "allOf": [
          {
            "properties": {
              "id": {
                "format": "uuid",
                "type": "string"
              },
              "order": {
                "items": {
                  "format": "uuid",
                  "type": "string"
                },
                "type": "array"
              }
            },
            "required": [
              "id",
              "order"
            ],
            "type": "object"
          },
          {
            "properties": {
              "title": {
                "minLength": 1,
                "type": "string"
              },
              "parentListId": {
                "format": "uuid",
                "type": "string",
                "nullable": true
              }
            },
            "required": [
              "title",
              "parentListId"
            ],
            "type": "object"
          }
        ]
      },
      "TaskListEntryGroup": {
        "title": "TaskListEntryGroup",
        "properties": {
          "id": {
            "format": "uuid",
            "type": "string"
          },
          "title": {
            "minLength": 1,
            "type": "string"
          }
        },
        "required": [
          "id",
          "title"
        ],
        "type": "object"
      },
      "Step": {
        "title": "Step",
        "properties": {
          "title": {
            "minLength": 1,
            "type": "string"
          },
          "completed": {
            "type": "boolean"
          }
        },
        "required": [
          "title",
          "completed"
        ],
        "type": "object"
      },
      "Task": {
        "title": "Task",
        "allOf": [
          {
            "properties": {
              "id": {
                "format": "uuid",
                "type": "string"
              },
              "createdAt": {
                "format": "date-time",
                "type": "string"
              },
              "updatedAt": {
                "format": "date-time",
                "type": "string"
              },
              "createdBy": {
                "minimum": 0,
                "type": "number"
              },
              "listId": {
                "minLength": 1,
                "type": "string"
              }
            },
            "required": [
              "id",
              "createdAt",
              "updatedAt",
              "createdBy",
              "listId"
            ],
            "type": "object"
          },
          {
            "properties": {
              "title": {
                "minLength": 1,
                "type": "string"
              },
              "completed": {
                "format": "date-time",
                "type": "string",
                "nullable": true
              },
              "isFavorite": {
                "type": "boolean"
              },
              "due": {
                "format": "date-time",
                "type": "string",
                "nullable": true
              },
              "reminder": {
                "format": "date-time",
                "type": "string",
                "nullable": true
              },
              "note": {
                "minLength": 1,
                "type": "string",
                "nullable": true
              },
              "steps": {
                "items": {
                  "$ref": "#/components/schemas/Step"
                },
                "type": "array"
              },
              "assignedTo": {
                "minimum": 0,
                "type": "number",
                "nullable": true
              }
            },
            "required": [
              "title",
              "completed",
              "isFavorite",
              "due",
              "reminder",
              "note",
              "steps",
              "assignedTo"
            ],
            "type": "object"
          }
        ]
      }
    },
    "parameters": {}
  }
}