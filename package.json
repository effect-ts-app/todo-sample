{
    "name": "@effect-ts-demo/todo",
    "author": "Patrick Roza <contact@patrickroza.com>",
    "license": "MIT",
    "workspaces": {
        "packages": [
            "apps/*",
            "packages/*"
        ]
    },
    "private": true,
    "dependencies": {
        "concurrently": "^6.0.2"
    },
    "devDependencies": {
        "@effect-ts/tracing-plugin": "^0.10.1",
        "@types/node": "^14.14.41",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^8.2.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-import-resolver-webpack": "^0.13.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-sort-destructure-keys": "^1.3.5",
        "fast-check": "^2.14.0",
        "nodemon": "^2.0.7",
        "npm-check-updates": "^11.4.1",
        "patch-package": "^6.4.7",
        "postinstall-postinstall": "^2.1.0",
        "prettier": "^2.2.1",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.4",
        "ttypescript": "^1.5.12",
        "ultra-runner": "^3.10.5"
    },
    "scripts": {
        "start": "concurrently -k -p \"[{name}]\" -n \"API,Frontend\" -c \"cyan.bold,green.bold,blue.bold\" \"yarn start:api\" \"yarn start:frontend\"",
        "start:api": "cd apps/api && yarn start",
        "dev": "concurrently -k -p \"[{name}]\" -n \"API,Frontend\" -c \"cyan.bold,green.bold,blue.bold\" \"yarn start:api\" \"yarn dev:frontend\"",
        "dev:frontend": "cd apps/frontend && yarn dev",
        "build": "cd apps/frontend && yarn build",
        "start:frontend": "cd apps/frontend && yarn start -p $PORT",
        "postinstall": "patch-package",
        "testsuite": "ultra -r yarn testsuite",
        "up": "ultra -r ncu -u --packageFile package.json && ncu -u --packageFile package.json"
    }
}
